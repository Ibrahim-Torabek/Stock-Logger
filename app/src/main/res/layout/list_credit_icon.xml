<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/layout_margin">

    <ImageView
        android:id="@+id/iconCreditImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_contact" />

    <TextView
        android:id="@+id/iconCreditTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:text="TextView"
        android:textColor="@color/blue_700"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/iconCreditImageView"
        app:layout_constraintStart_toEndOf="@+id/iconCreditImageView"
        app:layout_constraintTop_toTopOf="@+id/iconCreditImageView" />
</androidx.constraintlayout.widget.ConstraintLayout>